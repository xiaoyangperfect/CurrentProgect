<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/edit_set_bg"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="50dp"
    android:paddingRight="40dp"
    android:paddingTop="50dp">

    <EditText
        android:id="@+id/edit_set_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:textColor="#a0a0a0"
        android:textColorHint="#a0a0a0"
        android:textCursorDrawable="@null"
        android:textSize="22dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@mipmap/pop_tempedit_line" />

    <com.airppt.airppt.view.RippleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/edit_set_cover"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@mipmap/edit_cover" />
    </com.airppt.airppt.view.RippleView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:id="@+id/music_cover_lay">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/edit_set_music_cover_btn"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/share_by_music_modle"
            android:textColor="#a0a0a0" />

        <Button
            android:id="@+id/edit_set_music_cover_btn"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/edit_set_nouse" />
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/edit_set_divider" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/edit_set_music_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/edit_set_nosong" />

        <TextView
            android:id="@+id/edit_set_music_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/edit_set_music_btn"
            android:layout_toRightOf="@+id/edit_set_music_img"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/no_music"
            android:textColor="#a0a0a0" />

        <Button
            android:id="@+id/edit_set_music_btn"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/edit_set_nouse" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@mipmap/edit_set_divider" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/edit_set_password_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@mipmap/edit_set_nolock" />

        <EditText
            android:id="@+id/edit_set_password_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/edit_set_password_btn"
            android:layout_toRightOf="@+id/edit_set_password_img"
            android:background="@mipmap/edit_set_edittext_bg"
            android:singleLine="true"
            android:gravity="center"
            android:padding="5dp"
            android:textColorHint="@color/hint"
            android:textColor="#a0a0a0"
            android:visibility="gone" />

        <TextView
            android:id="@+id/edit_set_nopassword_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/edit_set_password_btn"
            android:layout_toRightOf="@+id/edit_set_password_img"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/no_password"
            android:textColor="#a0a0a0" />

        <Button
            android:id="@+id/edit_set_password_btn"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/edit_set_nouse" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/edit_set_cancel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/edit_set_cancel_btn" />

        <Button
            android:id="@+id/edit_set_ok"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/edit_set_ok_btn" />
    </RelativeLayout>
</LinearLayout>