<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/base_item_padding"
    android:paddingLeft="2dp"
    android:paddingRight="2dp">

    <com.airppt.airppt.view.CustemViewPager
        android:id="@+id/activity_main_custemviewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/mainpager_pointcontainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/activity_main_custemviewpager"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/activity_main_custemviewpager"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" />
</RelativeLayout>